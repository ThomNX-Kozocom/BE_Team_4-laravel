{
    "networkMode" : "awsvpc",
    "cpu" : "256",
    "memory" : "512",
    "requiresCompatibilities": ["FARGATE"],
    "taskRoleArn" : "$ECS_DEV_TASK_ROLE",
    "executionRoleArn" : "$ECS_DEV_TASK_ROLE",
    "containerDefinitions":
    [
        {
            "name": "dev-enudge-app-apache",
            "image": "$AWS_ECR_ACCOUNT_URL/enudge-app:$CIRCLE_SHA1",
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/fargate/dev/app",
                    "awslogs-region": "us-west-2",
                    "awslogs-stream-prefix": "app"
                }
            },
            "environment": [
                {
                    "name": "APP_NAME",
                    "value": "enudge"
                },
                {
                    "name": "APP_ENV",
                    "value": "dev"
                },
                {
                    "name": "APP_DEBUG",
                    "value": "true"
                },
                {
                    "name": "APP_URL",
                    "value": "https://test-thomnx.com"
                },
                {
                    "name": "DB_CONNECTION",
                    "value": "mysql"
                },
                {
                    "name": "DB_HOST",
                    "value": ""
                },
                {
                    "name": "DB_HOST_READ",
                    "value": ""
                },
                {
                    "name": "DB_PORT",
                    "value": "3306"
                },
                {
                    "name": "DB_USERNAME",
                    "value": ""
                },
                {
                    "name": "DB_DATABASE",
                    "value": ""
                },
                {
                    "name": "DB_PASSWORD",
                    "value": ""
                }
            ]
        }
    ]
}
